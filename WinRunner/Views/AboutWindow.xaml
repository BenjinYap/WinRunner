<Window x:Class="WinRunner.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:res="clr-namespace:WinRunner.Resources"
        WindowStartupLocation="CenterOwner"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        KeyUp="KeyUpped"
        Title="{x:Static res:Resource.AboutWinRunner}">
    
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>
    
    <StackPanel Margin="20">
        <TextBlock>WinRunner</TextBlock>
        <TextBlock Text="{x:Static res:Resource.DevelopedBy}" Margin="20"></TextBlock>
        <TextBlock Text="{x:Static res:Resource.LicensedUnder}" Margin="0 0 0 20"></TextBlock>
        <TextBlock Text="{x:Static res:Resource.SourceCodeAt}"></TextBlock>
        <TextBlock>
            <Hyperlink NavigateUri="https://github.com/BenjinYap/WinRunner" RequestNavigate="NavigateRequested">
                <Run Text="{x:Static res:Resource.Repo}"></Run>
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
